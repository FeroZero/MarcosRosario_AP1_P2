@page "/Registro/Index"
@inject ComboService Service
@inject ToastService toastService
@inject NavigationManager navigationManager
@rendermode InteractiveServer 

<PageTitle>Index Registro</PageTitle>
<div class="container">
	<div class="card shadow-lg">
		<div class="card-header">
			<div class="card-title">
				<h3><strong>Registro</strong></h3>
			</div>
			<div class="text-end">
				<a href="/Registro/Create"
				   class="btn btn-primary">
					<span class="bi bi-plus-square mt-3"></span> Crear
				</a>
			</div>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>id</th>
						<th>Combos</th>
						<th>Fecha</th>
						<th>Precio</th>
						<th>Vendido</th>
						<th>Editar</th>
						<th>Ver</th>
						<th>Eliminar</th>
					</tr>
				</thead>

				<tbody>
					@foreach(var Combos in ListaCombos)
					{
						<tr>
							<td>@Combos.ComboId</td>
							<td>@Combos.Descripcion</td>
							<td>@Combos.Fecha</td>
							<td>@Combos.Precio</td>
							<td value="@Combos.Vendido"></td>
							<td class="text-center">
								<a href="/Registro/Details/@Combos.ComboId" class="btn btn-outline-secondary bi bi-eye">Ver</a>
							</td>
							<td class="text-center">
								<a href="/Registro/Edit/@Combos.ComboId" class="btn btn-outline-warning bi bi-pencil-square">Editar</a>
							</td>
							<td class="text-center">
								<a href="/Registro/Delete/@Combos.ComboId" class="btn btn-outline-danger bi bi-trash">Eliminar</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@code {
	public string Notificacion { get; set; }
	public List<Combos> ListaCombos { get; set; } = new List<Combos>();

	protected override async Task OnInitializedAsync()
	{
		ListaCombos = await Service.Listar(t => t.ComboId > 0);
	}
}